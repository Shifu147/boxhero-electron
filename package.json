{
  "name": "boxhero-electron",
  "version": "1.0.0",
  "description": "Simple Inventory Management Solution",
  "main": "out/electron/main.js",
  "devDependencies": {
    "@babel/core": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.1",
    "@types/i18next-node-fs-backend": "2.1.0",
    "@types/lodash.debounce": "4.0.6",
    "@types/react": "16.9.52",
    "@types/react-dom": "16.9.8",
    "@types/react-loader-spinner": "3.1.1",
    "@types/styled-components": "5.1.4",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "awesome-typescript-loader": "5.2.1",
    "concurrently": "5.3.0",
    "copyfiles": "2.4.0",
    "cross-env": "7.0.2",
    "css-loader": "5.0.0",
    "dotenv": "8.2.0",
    "electron": "10.1.5",
    "electron-builder": "22.9.1",
    "electron-notarize": "1.0.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.14.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "html-webpack-plugin": "4.5.0",
    "style-loader": "2.0.0",
    "ts-loader": "8.0.5",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-bundle-analyzer": "3.9.0",
    "webpack-cli": "4.0.0",
    "webpack-dev-server": "3.11.0"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "webpack --mode=development && tsc && cross-env NODE_ENV=development electron .",
    "watch": "./watch.sh",
    "pack": "electron-builder --dir",
    "dist-win": "webpack && tsc && electron-builder -w",
    "dist-mas": "node build-mas.js",
    "dist-mas-dev": "node build-mas-dev.js",
    "dist-mac": "electron-builder --mac -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgpworks/boxhero-electron.git"
  },
  "author": "BoxHero, Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bgpworks/boxhero-electron/issues"
  },
  "build": {
    "appId": "com.bgpworks.boxhero-mac",
    "productName": "Box Hero",
    "files": [
      "out",
      "locales",
      "static"
    ],
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "identity": "BGPworks (AXBF9WS5F5)",
      "type": "distribution",
      "category": "public.app-category.business",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "provisioningProfile": "cert/boxheromac.provisionprofile",
      "publish": [{
          "provider": "github",
          "owner": "bgpworks",
          "repo": "boxhero-electron"
        },
        {
          "provider": "s3",
          "bucket": "boxhero-autoupdate",
          "acl": "public-read"
        }
      ]
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterSign": "./notarize.js"
  },
  "homepage": "https://www.boxhero.io/",
  "dependencies": {
    "electron-log": "4.2.4",
    "electron-updater": "4.3.5",
    "i18next": "19.8.2",
    "i18next-node-fs-backend": "2.1.3",
    "lodash.debounce": "4.0.8",
    "nodemon": "2.0.5",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-loader-spinner": "3.1.14",
    "styled-components": "5.2.0",
    "styled-normalize": "8.0.7"
  }
}